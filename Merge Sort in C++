#include <bits/stdc++.h>
using namespace std;

// Merge function using a single temp array
void merge(vector<int>& arr, vector<int>& temp, int left, int mid, int right) {
    int i = left;     // starting index of left subarray
    int j = mid + 1;  // starting index of right subarray
    int k = left;     // index for temp array

    // Merge both halves into temp[]
    while (i <= mid && j <= right) {
        if (arr[i] <= arr[j])  // stable merge
            temp[k++] = arr[i++];
        else
            temp[k++] = arr[j++];
    }

    // Copy remaining elements of left half
    while (i <= mid)
        temp[k++] = arr[i++];

    // Copy remaining elements of right half
    while (j <= right)
        temp[k++] = arr[j++];

    // Copy merged elements back to original array
    for (int idx = left; idx <= right; idx++)
        arr[idx] = temp[idx];
}

// Recursive merge sort
void mergeSort(vector<int>& arr, vector<int>& temp, int left, int right) {
    if (left < right) {
        int mid = left + (right - left) / 2;

        mergeSort(arr, temp, left, mid);      // left half
        mergeSort(arr, temp, mid + 1, right); // right half

        merge(arr, temp, left, mid, right);   // merge them
    }
}

int main() {
    vector<int> arr = {38, 27, 43, 3, 9, 82, 10};
    int n = arr.size();
    vector<int> temp(n);  // single temp array allocated once

    cout << "Original array:\n";
    for (int x : arr) cout << x << " ";
    cout << "\n";

    mergeSort(arr, temp, 0, n - 1);

    cout << "Sorted array:\n";
    for (int x : arr) cout << x << " ";
    cout << "\n";

    return 0;
}
