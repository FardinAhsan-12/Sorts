#include <bits/stdc++.h>
using namespace std;

// Merge two halves using a single temp array
void merge(vector<int>& arr, vector<int>& temp, int left, int mid, int right) {
    int i = left;     // left subarray index
    int j = mid + 1;  // right subarray index
    int k = left;     // temp array index

    while (i <= mid && j <= right) {
        if (arr[i] <= arr[j])  // stable merge
            temp[k++] = arr[i++];
        else
            temp[k++] = arr[j++];
    }

    while (i <= mid)
        temp[k++] = arr[i++];
    while (j <= right)
        temp[k++] = arr[j++];

    for (int idx = left; idx <= right; idx++)
        arr[idx] = temp[idx];
}

// Recursive merge sort
void mergeSort(vector<int>& arr, vector<int>& temp, int left, int right) {
    if (left < right) {
        int mid = left + (right - left) / 2;
        mergeSort(arr, temp, left, mid);
        mergeSort(arr, temp, mid + 1, right);
        merge(arr, temp, left, mid, right);
    }
}

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int n;
    cout << "Enter number of elements: ";
    cin >> n;

    vector<int> arr(n);
    cout << "Enter " << n << " elements:\n";
    for (int i = 0; i < n; i++)
        cin >> arr[i];

    vector<int> temp(n);  // one reusable temp array

    mergeSort(arr, temp, 0, n - 1);

    cout << "Sorted array:\n";
    for (int x : arr)
        cout << x << " ";
    cout << "\n";

    return 0;
}
